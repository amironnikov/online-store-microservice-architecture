<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="amironnikov">
        <createTable tableName="orders">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="uuid"/>
            <column name="zip_code" type="int"/>
            <column name="created" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="updated" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="status" type="varchar(50)"/>
            <column name="total_cost" type="int"/>
            <column name="total_weight" type="float8"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="amironnikov">
        <createTable tableName="order_product">
            <column name="order_id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="product_id" type="uuid"/>
            <column name="quantity" type="int"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="amironnikov">
        <createTable tableName="user_account">
            <column name="user_id" type="uuid"/>
            <column name="credit_limit" type="int"/>
            <column name="created" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>
            <column name="updated" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4" author="amironnikov">
        <insert tableName="user_account">
            <column name="user_id" value="abaab40e-2c10-424f-80ec-b33f562440bf"/>
            <column name="credit_limit" valueNumeric="1000"/>
        </insert>
    </changeSet>

</databaseChangeLog>